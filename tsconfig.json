{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "types": ["@remix-run/node", "@remix-run/react", "node"],
    "noEmit": true
  },
  "include": ["app", "remix.config.js", "prisma", "tests", "playwright.config.ts"]
} 